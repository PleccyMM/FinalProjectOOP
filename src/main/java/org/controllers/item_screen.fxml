<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<?import org.vexillum.ToggleSwitch?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.controllers.ItemController"
            stylesheets="@MainStyle.css"
            style="-fx-background-color: #FFFFFF"
            fx:id="panMain">
    <top>
        <fx:include source="header.fxml"/>
    </top>
    <left>
        <VBox fx:id="boxItemStore" spacing="8"
              alignment="TOP_CENTER">
            <padding>
                <Insets right="8" top="8" left="8" bottom="8"/>
            </padding>
        </VBox>
    </left>
    <right>
        <StackPane minWidth="385">
            <padding>
                <Insets right="8" top="8" bottom="8"/>
            </padding>
            <VBox id="grey-fill" minHeight="300">
                <padding>
                    <Insets right="8" top="8" left="16" bottom="16"/>
                </padding>
                <Label id="title-black" text="£8.00+"/>
                <HBox alignment="CENTER">
                    <padding>
                        <Insets right="8" top="8" left="8" bottom="8"/>
                    </padding>
                    <VBox id="light-blue-fill" spacing="25" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets right="10" top="15" left="10" bottom="15"/>
                        </padding>
                        <Label id="lblModifications" text="Modifications:"/>
                        <ComboBox id="cmbModifications" promptText="Hoist Attachment" minWidth="160">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="None (£0.00)"/>
                                    <String fx:value="Fabric Rings (£0.50)"/>
                                    <String fx:value="Metal Rings (£2.50)"/>
                                    <String fx:value="Wooden Toggles (£5.00)"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <HBox alignment="CENTER_LEFT" spacing="7">
                            <Label id="lblToggleL" text="Polyester"/>
                            <ToggleSwitch/>
                            <Label id="lblToggleR" text="Nylon (£3)"/>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <HBox alignment="CENTER" fillHeight="false" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 7, 0.0, 0, 1);">
                                <Button fx:id="btnMinus" minWidth="15" minHeight="15"/>
                                <VBox id="lblIncriment" minWidth="65" alignment="CENTER">
                                    <Label id="lblIncriment" textAlignment="CENTER" text="1" VBox.vgrow="ALWAYS"/>
                                </VBox>
                                <Button fx:id="btnAdd" minWidth="15" minHeight="15"/>
                            </HBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <HBox alignment="CENTER_RIGHT">
                                <VBox alignment="CENTER_RIGHT" spacing="-4">
                                    <Label id="lblTotalLabel" text="Total Price:"/>
                                    <Label fx:id="lblTotalPrice" text="£8.00"/>
                                </VBox>
                            </HBox>
                        </HBox>
                    </VBox>
                </HBox>
                <Region VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER_RIGHT">
                    <Button id="btnBlue"
                            style="-fx-font-size: 16; -fx-background-radius: 15;"
                            minWidth="170"
                            minHeight="50"
                            text="Add to Basket"
                    />
                </HBox>
            </VBox>
        </StackPane>
    </right>
    <center>
        <VBox spacing="16">
            <padding>
                <Insets right="8" top="8" left="8" bottom="8"/>
            </padding>
            <VBox id="grey-fill"
                  minWidth="480"
                  minHeight="305"
                  alignment="CENTER">
                <VBox id="imageHolder"
                      style="-fx-border-width: 2; -fx-border-color: #000000;"
                      maxWidth="1">
                    <ImageView fx:id="imgFlag"/>
                </VBox>
            </VBox>
            <HBox spacing="10" VBox.vgrow="ALWAYS">
                <VBox id="grey-fill"
                      HBox.hgrow="ALWAYS"
                      prefWidth="100">
                    <padding>
                        <Insets right="8" top="8" left="8" bottom="8"/>
                    </padding>
                    <Label fx:id="lblName" wrapText="true"/>
                </VBox>
                <VBox id="grey-fill"
                      HBox.hgrow="ALWAYS"
                      prefWidth="100">
                    <Label fx:id="lblTags"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
