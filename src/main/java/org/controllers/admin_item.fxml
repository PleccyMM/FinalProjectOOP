      alignment="CENTER_LEFT"
      spacing="98"
      styleClass="white-divider"
      prefHeight="80">
    <padding>
        <Insets right="8" top="8" left="8" bottom="8"/>
    </padding>

    <Label fx:id="lblUsername" styleClass="sub-title-black"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Label fx:id="lblApplicationTime" styleClass="small-title-black"/>
