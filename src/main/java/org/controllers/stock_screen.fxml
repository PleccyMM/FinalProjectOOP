<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<BorderPane fx:controller="org.controllers.StockController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@MainStyle.css">
    <top>
        <HBox id="blue-fill"
              minHeight="55"
              spacing="10"
              alignment="CENTER_LEFT">
            <padding>
                <Insets left="10"/>
            </padding>
            <Button id="btnBack"
            />
            <HBox id="mid-blue-fill"
                  alignment="CENTER_LEFT"
                  maxHeight="30">
                <padding>
                    <Insets left="8"/>
                </padding>
                <ImageView id="image-search"/>
                <TextField fx:id="enrSearch"
                           prefWidth="580"
                           promptText="Search Stock"
                />
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT"
                  spacing="20">
                <padding>
                    <Insets right="20"/>
                </padding>
                <ImageView id="image-shopping"/>
                <ImageView id="image-profile"/>
            </HBox>
        </HBox>
    </top>
    <center>
        <BorderPane>
            <top>
                <HBox minHeight="64"
                      spacing="32"
                      alignment="CENTER_LEFT">
                    <Label text="Type"
                    />
                    <Label text="Design"
                    />
                    <Label text="Region"
                    />
                    <Label text="Initial"
                    />
                </HBox>
            </top>
            <center>
                <ScrollPane id="light-blue-fill">
                    <VBox id="white-divider"
                          prefHeight="190"
                          prefWidth="194"
                          alignment="center">
                        <VBox style="-fx-border-width: 2; -fx-border-color: #000000;"
                              maxWidth="1">
                            <ImageView id="image-test-flag"
                                         fitHeight="70"
                                         fitWidth="94"
                            />
                        </VBox>
                        <Label id="label-stock-name"
                               text="Sámi"
                        />
                        <Label id="label-stock-price"
                               text="£2.50-£22.00+"
                        />
                        <Label/>
                        <HBox alignment="center" spacing="15">
                            <Button id="btnBlue"
                                    text="Flag"
                                    prefWidth="65"
                                    prefHeight="27"
                            />
                            <Button id="btnBlue"
                                    text="Cushion"
                                    prefWidth="65"
                                    prefHeight="27"
                            />
                        </HBox>
                    </VBox>
                </ScrollPane>
            </center>
            <left>
                <VBox prefWidth="16"/>
            </left>
            <right>
                <VBox prefWidth="16"/>
            </right>
        </BorderPane>
    </center>
    <left>
        <VBox prefWidth="48"/>
    </left>
    <right>
        <VBox prefWidth="48"/>
    </right>
</BorderPane>
